<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="basePath">./logs</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="File" fileName="${basePath}/prints.log" filePattern="${basePath}/prints-%d{yyyy-MM-dd-HH-mm-ss}.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
			<SizeBasedTriggeringPolicy size="500" /> <!-- once file is over 500 kb, a new file is created -->
		</RollingFile>
	</Appenders>
	
	<Loggers>
		<Logger name="alpha.DemoA" level="trace" additivity="false">
			<AppenderRef ref="File" />		<!-- log into file -->
		</Logger>
		<Root level="error">
			<AppenderRef ref="Console" /> 	<!-- log into console --> 	
		</Root>
	</Loggers>
</Configuration>